#include <stdio.h>
#include <stdlib.h>

typedef struct application {
    int a;
    int b;
} application;

void printMax(int n, int m, application l[]);
int compare(const void *a, const void *b);
int main( )
{
    int testCase, n, m;
    application input[1000];
    scanf("%d", &testCase);
    for(int i = 0; i < testCase; i++) {
        scanf("%d %d", &n, &m);
        for(int j = 0; j < m; j++) {
            scanf("%d %d", &input[j].a, &input[j].b);
        }
        printMax(n, m, input);
    }
}

void printMax(int n, int m, application l[])
{
    int books[1000];
    int ta, tb, count = 0;
    for(int i = 0; i < n; i++) {
        books[i] = 0;
    }
    
    qsort(l, m, sizeof(application), compare);
    for(int i = 0; i < m; i++) {
        ta = l[i].a; tb = l[i].b;
        for(int j = ta - 1; j < tb; j++) {
            if(books[j] == 0) {
                books[j] = 1;
                count++;
                break;
            }
        }
    }
    
    printf("%d\n", count);
}

int compare(const void *a, const void *b)
{
    application *ta = (application *)a;
    application *tb = (application *)b;
    
    if(ta->b < tb->b) return -1;
    else if(ta->b > tb->b) return 1;
    else {
        if(ta->a > tb->a) return -1;
        else if(ta->a < tb->a) return 1;
        else return 0;
    }
}
