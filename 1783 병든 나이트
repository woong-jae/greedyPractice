#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

void printMax(int n, int m);
int main()
{
	int n, m;
	scanf("%d %d", &n, &m);
	printMax(n, m);
}

void printMax(int n, int m)
{
	int maxVal = 1;
	
	//이동 횟수가 4번 이상
	if (n >= 3 && m >= 7)
	{
		maxVal = m - 2;
	}

	//이동 횟수가 4번 미만
	else
	{
		if (n == 1)
		{
			maxVal = 1;
		}
		else if (n == 2)
		{
			if (m >= 7)
			{
				maxVal = 4;
			}
			else
			{
				maxVal += (m - 1) / 2;
			}
		}
		else
		{
			if (m >= 4)
			{
				maxVal = 4;
			}
			else
			{
				maxVal = m;
			}
		}
	}

	printf("%d\n", maxVal);
}
