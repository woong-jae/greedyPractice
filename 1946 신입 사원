#include <stdio.h>
#include <stdlib.h>

typedef struct {
	int paper;
	int interview;
}score;

int employBest(int N);
int compare(const void *a, const void *b);
int main()
{
	int T, N;
	int result[20];
	scanf("%d", &T);
	for (int i = 0; i < T; i++) {
		scanf("%d", &N);
		result[i] = employBest(N);
	}
	for (int i = 0; i < T; i++) {
		printf("%d\n", result[i]);
	}
	//system("pause");
}

int employBest(int N)
{
	int maxVal = 1, current;
	score scores[100000];
	for (int i = 0; i < N; i++) {
		scanf("%d %d", &scores[i].paper, &scores[i].interview);
	}

	qsort(scores, N, sizeof(score), compare);
	current = scores[0].interview;
	for (int i = 1; i < N; i++) {
		if (scores[i].interview < current)
		{
			maxVal++;
			current = scores[i].interview;
		}
	}
	return maxVal;
}

int compare(const void *a, const void *b)
{
	score *ptA = (score *)a;
	score *ptB = (score *)b;

	if (ptA->paper < ptB->paper) return -1;
	else if (ptA->paper > ptB->paper) return 1;
	else return 0;
}
