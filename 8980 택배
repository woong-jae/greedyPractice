#include <stdio.h>
#include <stdlib.h>

typedef struct box {
    int get;
    int send;
    int boxNum;
} box;

int compare(const void *a, const void *b)
{
    box *ta = (box *)a;
    box *tb = (box *)b;
    
    if(ta->send < tb->send) return -1;
    else if(ta->send > tb->send) return 1;
    else {
        if(ta->get < tb->get) return -1;
        else if(ta->get > tb->get) return 1;
        else {
            return 0;
        }
    }
}

int main()
{
    int n, c, m;
    box boxes[10000];
    int capacity[2000] = {0, };
    int temp, count = 0;
    
    scanf("%d %d", &n, &c);
    scanf("%d", &m);
    for(int i = 0; i < m; i++) {
        scanf("%d %d %d", &boxes[i].get, &boxes[i].send, &boxes[i].boxNum);
    }
    qsort(boxes, m, sizeof(box), compare);
    
    
    for(int i = 0; i < m; i++) {
        temp = boxes[i].get;
        for(int j = boxes[i].get; j < boxes[i].send; j++){ //택배 용량이 가장 큰 지점 탐색
            if(capacity[j] > capacity[temp]) temp = j;
        }
        
        if(capacity[temp] < c)//실을 박스 수를 정한다.
        {
            if(capacity[temp] + boxes[i].boxNum <= c)
            {
                for(int j = boxes[i].get; j < boxes[i].send; j++){
                    capacity[j] += boxes[i].boxNum;
                }
                count += boxes[i].boxNum;
            }
            else
            {
                temp = c - capacity[temp];
                for(int j = boxes[i].get; j < boxes[i].send; j++){
                    capacity[j] += temp;
                }
                count += temp;
            }
        }
    }
    
    printf("%d\n", count);
}
