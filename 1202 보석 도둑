#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

typedef struct gem {
	int m;
	int v;
	int used;
}gem;

int compareG(const void *a, const void *b)
{
	gem *ta = (gem *)a;
	gem *tb = (gem *)b;

	if (ta->v < tb->v) return 1;
	else if (ta->v > tb->v) return -1;
	else return 0;
}

int compare(const void *a, const void *b)
{
	int ta = *(int *)a;
	int tb = *(int *)b;
	
	if (ta < tb) return -1;
	else if (ta > tb) return 1;
	else return 0;
}

int main()
{
	int n, k, max = 0;
	int c[300000];
	gem gems[300000];


	scanf("%d %d", &n, &k);
	for (int i = 0; i < n; i++) {
		scanf(" %d %d", &gems[i].m, &gems[i].v);
		gems[i].used = 0;
	}
	for (int i = 0; i < k; i++) {
		scanf(" %d", &c[i]);
	}
	
	qsort(c, k, sizeof(int), compare);
	qsort(gems, n, sizeof(gem), compareG);


	if (k <= n)
	{
		for (int i = 0; i < k; i++) {
			for (int j = 0; j < n; j++) {
				if (gems[j].m <= c[i] && gems[j].used == 0)
				{
					gems[j].used++;
					max += gems[j].v;
					break;
				}
			}
		}
	}
	else
	{
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < k; j++) {
				if (gems[i].m <= c[j])
				{
					max += gems[j].v;
					c[j] = -1;
					break;
				}
			}
		}
	}

	printf("%d\n", max);
	//system("pause");
}
