#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

int compare(const void *a, const void *b)
{
	int ta = *(int *)a;
	int tb = *(int *)b;

	if (ta < tb) return -1;
	else if (ta > tb) return 1;
	else return 0;
}

void minTape(int n, int l, int leak[])
{
	int tape = 0, index;
	
	qsort(leak, n, sizeof(int), compare);

	index = 0; tape = 1;
	for (int i = 1; i < n; i++) {
		if (leak[i] > leak[index] + l - 1)
		{
			index = i;
			tape++;
		}
	}
	printf("%d\n", tape);
}

int main()
{
	int n, l, leak[1000];
	scanf("%d %d", &n, &l);
	for (int i = 0; i < n; i++) {
		scanf(" %d", &leak[i]);
	}
	minTape(n, l, leak);
	system("pause");
}


