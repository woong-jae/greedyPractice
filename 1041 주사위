#include <stdio.h>
#include <stdlib.h>

typedef struct dice{
    int face;
    int val;
}dice;

int compare(const void *a, const void *b)
{
    dice *ta = (dice *)a;
    dice *tb = (dice *)b;
    
    if(ta->val < tb->val) return -1;
    else if(ta->val > tb->val) return 1;
    else return 0;
}

int main()
{
    int n;
    dice dices[6];
    int minIndex = -1, minIndex2 = -1, minIndex3 = -1;
    long long maxVal = 0;
    
    scanf("%d", &n);
    for (int i = 0; i < 6; i++) {
        scanf(" %d", &dices[i].val);
        dices[i].face = i;
    }
    
    qsort(dices, 6, sizeof(dice), compare);
    
    minIndex = dices[0].face;
    for(int i = 1; i < 6; i++) {
        if(minIndex + dices[i].face != 5)
        {
            minIndex2 = i;
            break;
        }
    }
    for (int i = 0; i < 6; i++) {
        if(dices[i].face + minIndex != 5 && dices[i].face + minIndex2 != 5
           && i != minIndex && i != minIndex2)
        {
            if(minIndex3 == -1)
            {
                minIndex3 = i;
            }
            else if(dices[minIndex3].val > dices[i].val)
            {
                minIndex3 = i;
            }
        }
    }
    
    if(n == 1)
    {
        for(int i = 0; i < 6; i++){
            maxVal += dices[i].val;
        }
        printf("%lld\n", maxVal);
    }
    else{
        maxVal += (dices[minIndex].val + dices[minIndex2].val + dices[minIndex3].val) * 4;
        maxVal += (n - 1) * 4 * (long long)(dices[minIndex].val + dices[minIndex2].val) + (4 * n - 8) * (long long)(dices[minIndex].val + dices[minIndex2].val);
        maxVal += (n - 2) * (n - 2) * (long long)dices[minIndex].val + (n - 2) * (n + 1) * (long long)dices[minIndex].val;
        printf("%lld\n", maxVal);
    }
}
