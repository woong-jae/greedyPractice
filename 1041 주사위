#include <stdio.h>
#include <stdlib.h>

typedef struct dice{
    int face;
    int val;
}dice;

int compare(const void *a, const void *b)
{
    dice *ta = (dice *)a;
    dice *tb = (dice *)b;
    
    if(ta->val < tb->val) return -1;
    else if(ta->val > tb->val) return 1;
    else return 0;
}

int main()
{
    int n;
    dice dices[6];
    int minIndex = -1, minIndex2 = -1, minIndex3 = -1;
    long long maxVal = 0;
    
    scanf("%d", &n);
    for (int i = 0; i < 6; i++) {
        scanf(" %d", &dices[i].val);
        dices[i].face = i;
    }
    
    qsort(dices, 6, sizeof(dice), compare);
    
    minIndex = 0;
    for(int i = 1; i < 6; i++) {
        if(dices[minIndex].face + dices[i].face != 5)
        {
            minIndex2 = i;
            break;
        }
    }
    for (int i = 0; i < 6; i++) {
        if(dices[i].face + dices[minIndex].face != 5 && dices[i].face + dices[minIndex2].face != 5
           && i != minIndex && i != minIndex2)
        {
            if(minIndex3 == -1)
            {
                minIndex3 = i;
            }
            else if(dices[minIndex3].val > dices[i].val)
            {
                minIndex3 = i;
            }
        }
    }
    
    if(n == 1)
    {
        for(int i = 0; i < 5; i++){
                maxVal += dices[i].val;
        }
        printf("%lld\n", maxVal);
    }
    else{
        maxVal = (long long)(n - 2) * (5 * n + 2) * dices[minIndex].val
        + 4 * ((long long)(2 * (dices[minIndex].val + (n - 1) * dices[minIndex2].val)) + dices[minIndex3].val);
        printf("%lld\n", maxVal);
    }
}
