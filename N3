#include <stdio.h>
#include <stdlib.h>

typedef struct {
	int sTime;
	int eTime;
}meeting;

int compare(const void *a, const void *b)
{
	meeting *ptA = (meeting *)a;
	meeting *ptB = (meeting *)b;

	if (ptA->eTime < ptB->eTime) return -1;
	else if (ptA->eTime > ptB->eTime) return 1;
    else {
		if (ptA->sTime > ptB->sTime) return 1;
		else if (ptA->sTime < ptB->sTime) return -1;
		else return 0;
	}
}


int main()
{
	int n;
	int count = 1, current = 0;
	meeting meetings[100000];
	scanf("%d", &n);
	for (int i = 0; i < n; i++) {
		scanf("%d %d", &meetings[i].sTime, &meetings[i].eTime);
	}	
	qsort(meetings, n, sizeof(meeting), compare);
	for (int i = 1; i < n; i++) {
		if (meetings[i].eTime == meetings[i].sTime)
		{
			count++;
		}
        else if (meetings[i].sTime >= meetings[current].eTime)
		{
			count++;
			current = i;
		}
	}
	printf("%d\n", count);
}
