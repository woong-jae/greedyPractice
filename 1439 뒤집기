#include <stdio.h>
#include <string.h>

int getToken(char input[], char token[])
{
    char temp[1000000];
    strcpy(temp, input);
    char *pt = strtok(temp, token);
    int count = 0;
    
    while(pt != NULL)
    {
        count++;
        pt = strtok(NULL, token);
    }
    return count;
}

int main()
{
    char input[1000000];
    int zero_token = 0, one_token = 0;
    
    gets(input);
    
    
    zero_token = getToken(input, "0");
    one_token = getToken(input, "1");
    
    if(zero_token > one_token)
    {
        printf("%d\n", one_token);
    }
    else
    {
        printf("%d\n", zero_token);
    }
}
