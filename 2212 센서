#include <stdio.h>
#include <stdlib.h>

int compare(const void* a, const void* b)
{
    int ta = *(int*)a;
    int tb = *(int*)b;
    
    if(ta < tb) return -1;
    else if(ta > tb) return 1;
    else return 0;
}

int main()
{
    int n, k;
    int sensor[10000], distance[10000];
    int count = 0;
    
    scanf("%d", &n);
    scanf("%d", &k);
    for(int i = 0; i < n; i++) {
        scanf(" %d", &sensor[i]);
    }
    qsort(sensor, n, sizeof(int), compare);
    
    for(int i = 0; i < n - 1; i++) {
        distance[i] = sensor[i + 1] - sensor[i];
    }
    qsort(distance, n - 1, sizeof(int), compare);
    
    for(int i = 0; i < n - 1 - (k - 1); i++) {
        count += distance[i];
    }
    printf("%d\n", count);
}
